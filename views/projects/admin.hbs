<section class="container">


<ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Usuarios</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Problemas</a>
  </li>

</ul>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">

<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Activo</th>
    </tr>
  </thead>
  <tbody>
      {{#each projects}}
    <tr>
      <th scope="row">{{this._id}}</th>
      <td>
          <a href="/projects/{{this._id}}/edit">
          {{this.name}}
          </a>
      </td>
      <td>{{this.price}}</td>
      <td>
        {{#if this.active}}
          <button class="btn btn-success">Si</button>
          {{else}}
          <button class="btn btn-danger">No</button>
          {{/if}}
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>

  </div>
  <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">

<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Username</th>
      <th scope="col">Email</th>
      <th scope="col">projects</th>
    </tr>
  </thead>
  <tbody>
      {{#each users}}
    <tr>
      <th scope="row">{{this._id}}</th>
      <td>{{this.username}}</td>
      <td>{{this.email}}</td>
      <td>{{this.projects.length}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>



  </div>
</div>






</section>
